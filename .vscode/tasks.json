{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Compile C++ file",
            "type": "shell",
            "command": "g++",
            "args": [
                "-g",
                "${file}",
                "-o",
                "${workspaceRoot}\\${fileBasenameNoExtension}.exe"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        } ,
        {
            "label": "Run C++ file",
            "type": "shell",
            "command": ".\\${fileBasenameNoExtension}.exe",
            "group": {
                "kind": "test",
                "isDefault": true
            }
        }   
        
       
    ]
}